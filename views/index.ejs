<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Video Upload</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: #f7f9fc;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 40px;
        }
        
        .upload-box {
            background: white;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            width: 100%;
            margin-bottom: 40px;
        }
        
        .form-control {
            border-radius: 6px;
        }
        
        .btn-upload {
            width: 100%;
            padding: 10px;
            border-radius: 6px;
            font-weight: 500;
        }
        
        .gallery video {
            max-width: 100%;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>

<body>

    <!-- Upload Form -->
    <div class="upload-box">
        <h2 class="text-center">Upload Your Videos</h2>
        <form action="/upload" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
                <input class="form-control" type="file" name="file" id="file" accept="video/*" required>
            </div>
            <button type="submit" class="btn btn-primary btn-upload">Upload</button>
        </form>
    </div>

    <!-- Video Gallery -->
    <% if (videos && videos.length > 0) { %>
        <h3 class="mb-4">Uploaded Videos</h3>
        <div class="row gallery">
            <% videos.forEach(url => { %>
                <div class="col-md-6 mb-4">
                    <video controls class="w-100">
                        <source src="<%= url %>" type="video/mp4">
                        Your browser does not support the video tag.
                    </video>
                    <p class="mt-2 text-muted small">
                        <%= url %>
                    </p>
                </div>
                <% }) %>
        </div>
        <% } else { %>
            <p class="text-muted">No videos uploaded yet.</p>
            <% } %>

                <script>
                    // Reset file input on load
                    window.onload = () => {
                        document.getElementById("file").value = "";
                    };
                </script>
</body>

</html>